<div class="row">
  <div class="col-md-12">
    <h2>Items</h2>
    <a href="/Items/add" class="btn btn-success pull-right">Add Post</a>

    <hr />

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Item ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Category</th>
            <th>Price</th>
            <th>Published</th>
            <th></th>
            <!-- Empty column for Remove buttons -->
          </tr>
        </thead>
        <tbody>
          {{#each items}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              <td>{{postDate}}</td>
              <td><a href="/Items?category={{category}}">{{category}}</a></td>
              <td>$ {{price}}</td>
              <td>{{published}}</td>
              <td>
                <a class="btn btn-danger" href="/items/delete/{{id}}">Remove</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{#unless items}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>